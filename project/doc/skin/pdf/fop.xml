<fop version="1.0">
	<renderers>
		<renderer mime="application/pdf">
			<filterList>
				<!-- provides compression using zlib flate (default is on) -->
				<value>flate</value>
			</filterList>
			<fonts>
				<directory>skin/pdf/fonts</directory>
			</fonts>
		</renderer>
	</renderers>
</fop>
